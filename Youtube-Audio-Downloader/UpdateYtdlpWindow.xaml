<Window x:Class="Youtube_Audio_Downloader.UpdateYtdlpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Youtube_Audio_Downloader"
        mc:Ignorable="d"
        Title="{x:Static local:Strings.updaterwnd_title}" Height="150" Width="300" ResizeMode="CanMinimize" ShowInTaskbar="False" Icon="/Resources/icon.png">
    <Grid>
        <Label Content="{x:Static local:Strings.updaterwnd_text}" FontSize="12" HorizontalAlignment="Center" Margin="10"/>
        <ProgressBar IsIndeterminate="True" VerticalAlignment="Bottom" Height="20" Margin="20"/>
    </Grid>
</Window>
